{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		/* Preact Config */
		// "jsx": "react-jsx",
		"jsx": "preserve",
		"jsxImportSource": "react",
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@pages/*": [
				"./src/pages/*"
			],
			"@requests/*": [
				"./src/requests/*"
			],
			"@styles/*": [
				"./src/styles/*"
			],
			"@types/*": [
				"./src/types/*"
			],
			"@util/*": [
				"./src/util/*"
			],
		},
		// "paths": {
		// 	"react": ["./node_modules/preact/compat/"],
		// 	"react-dom": ["./node_modules/preact/compat/"]
		// }
	},
	"include": [
		"node_modules/vite/client.d.ts",
		"**/*"
	]
}